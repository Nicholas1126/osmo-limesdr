Build-Depends: debhelper (>= 9),
               autotools-dev,
               pkg-config,
               libdpkg-perl, git,
               dh-autoreconf,
               libosmocore-dev (>= 0.8.0)
Standards-Version: 3.9.6
Vcs-Browser: http://git.osmocom.org/osmo-ggsn/
